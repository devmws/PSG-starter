# editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 2
indent_style = tab
trim_trailing_whitespace = true
max_line_length= off

curly_bracket_next_line= true
quote_type= single
spaces_around_operators= true

[*.md]
trim_trailing_whitespace = false
