nav.navbar.navbar-expand-lg.navbar-light.bg-light
	button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarTogglerDemo01' aria-controls='navbarTogglerDemo01' aria-expanded='false' aria-label='Toggle navigation')
		span.navbar-toggler-icon
	a.navbar-brand.m-0.mr-md-3(href="./index.html")
		figure.m-0
			img.d-inline-block.align-top.img-fluid(src="./media/images/logoFull.png" loading="lazy" alt="Website logo")
	.collapse.navbar-collapse#navbarTogglerDemo01
		ul.navbar-nav.mr-auto.mt-2.mt-lg-0
			- const listItems = [{ title: "home", href: "./index.html" }, { title: "features", href: "./features.html" }, { title: "pricing", href: "./pricing.html" }, { title: "about", href: "./about.html" }]
			each item in listItems
				li.nav-item
					a(href=item.href class=`nav-link text-capitalize ${activePage == item.title ? 'active' : ''}`)= item.title

		form.form-inline.my-2.my-lg-0
			input.form-control.mr-sm-2(type="search" placeholder="Search" aria-label="Search")
			button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Submit
